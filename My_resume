import telebot
from telebot import types
bot=telebot.TeleBot('TOKEN')

@bot.message_handler(commands=['start'])
def start(message):
    markup=types.ReplyKeyboardMarkup(resize_keyboard=True)
    btn1=types.KeyboardButton("Поздороваться")
    markup.add(btn1)
    bot.send_message(message.from_user.id, "Приветствую! Я бот-резюме! Расскажу всё, что вы хотите знать обо мне в профессиональном плане и не только. Давайте начнем собеседование!", reply_markup=markup)

@bot.message_handler(content_types=['text'])
def get_text_messages(message):
    if message.text=='Поздороваться':
        markup=types.ReplyKeyboardMarkup(resize_keyboard=True)
        btn1=types.KeyboardButton('Расскажи немного о себе')
        btn2=types.KeyboardButton('Какое у тебя образование?')
        btn3=types.KeyboardButton('Где ты работала и на какой должности?')
        btn4=types.KeyboardButton('Какие твои ключевые навыки?')
        markup.add(btn1, btn2, btn3, btn4)
        bot.send_message(message.from_user.id, 'Задайте интересующий вопрос', reply_markup=markup)
    elif message.text=='Расскажи немного о себе':
        bot.send_message(message.from_user.id, 'Меня зовут Юлия. Всю свою учебную и научно-исследовательскую деятельность я посвятила протезированию рук. Я проводила исследования и изучала биомеханику рук 20 человек для внедрения выявленных взаимосвязей в кинематику протеза. А затем я стала частью классной команды, которая разрабатывает эти самые протезы с нуля. Там и пригодились результаты моих трудов. А сейчас пришло время двигаться дальше! Я осваиваю IT область и обожаю искать ошибки в коде. По-моему, классный айтишник должен любить это занятие не меньше, чем разработку нового кода. А в свободное время я тренирую свои руки для наслаждения ушей на piano-YAMAHA.', parse_mode='Markdown')
    elif message.text=='Какое у тебя образование?':
        bot.send_message(message.from_user.id, 'Я магистр! Защитила ВКРМ в МГТУ им. Н. Э. Баумана на факультете БМТ (Биомедицинская техника). Комиссия оценила мой труд, как одну из лучших работ на потоке, чем я горжусь. С данной научно-исследовательской работы и начался мой путь в IT. Я разработала алгоритм захвата движения руки человека, для дальнейшего анализа кинематики.', parse_mode='Markdown')
    elif message.text=='Где ты работала и на какой должности?':
        bot.send_message(message.from_user.id, 'Я работала в ООО «Миолимб», компании по разработке протезно-ортопедических изделий. Я занимала должность инженера (разработчика). Задачи были самые разнообразные, от разработки новых моделей компонентов протеза и оформления конструкторской документации до проведения научных исследований и анализа результатов. А до этого я работала в СНИЛ ДГТУ РНИОИ «Инженерные технологии в медицине», где руководила проектом по разработке многофункционального бионического узла кисти', parse_mode='Markdown')
    elif message.text=='Какие твои ключевые навыки?':
        bot.send_message(message.from_user.id, 'Python - что может быть интересней. Как рыба в воде, когда дело доходит до SolidWorks. Умело применяю MATLAB. Знаю, как писать SQL-запросы и работать с базами данных. Знаю HTML, CSS и немного Django Framework. Помимо этого, я люблю статистический анализ. Ответственно подхожу к любому заданию. Не боюсь кропотливой работы. Внимательна к деталям. Быстро обучаюсь и нацелена на результат!', parse_mode='Markdown')

bot.polling(none_stop=True, interval=0)
